<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kate Hacker | @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/scaffolding.css")" rel="stylesheet" type="text/css" />
	<link href='http://fonts.googleapis.com/css?family=Old+Standard+TT:400italic,400' rel='stylesheet' type='text/css'>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/hover.js")" type="text/javascript"></script>
	<script src="http://bxslider.com/sites/default/files/jquery.bxSlider.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		$(document).ready(function () {
			$('#imageSlider').bxSlider({
				prevImage: "@Url.Content("/Images/ChevronLeft.png")",
				nextImage: "@Url.Content("/Images/ChevronRight.png")",
				hideControlOnEnd: true,
				infiniteLoop: false
			});
		});
	</script>
</head>
<body>
    <div class="siteWrapper">
		@Html.Partial("_Header")
        <section id="main">
            @RenderBody()
        </section>
        <div class="clear">
		</div>
    </div>
</body>
</html>
